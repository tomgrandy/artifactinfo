{% set current_path = path('<current>') %}
<div class="layout-container">
  <header class="header">
    <div class="header-container">
      <a href="{{ front_page|default(path('<front>')) }}" class="logo">
        <img src="{{ logo_path|default(base_path ~ directory ~ '/images/Ai-Logo2proof.png') }}" class="logo-icon" alt="{{ site_name|default('Site Logo')|t }}">
      </a>
      {% if page.primary_menu %}
        {{ page.primary_menu }}
      {% endif %}
    </div>
  </header>

  {% if page.breadcrumb %}
    <div class="layout-breadcrumb">
      {{ page.breadcrumb }}
    </div>
  {% endif %}

  <section class="banner-section {% if current_path == '/learning-center' %} learning-center-listing {% else %} banner-section-detail {% endif %}">
    <div class="banner-background"{% if learning_page_background_image_url %} style="background-image: url('{{ learning_page_background_image_url }}');"{% endif %}></div>
    <div class="banner-content">
      <h1 class="banner-title">{{'The Learning Center'}}</h1>
      <div class="search-container">
        {% if current_path == '/learning-center' %}
        {% else %}
          {{ drupal_block('views_exposed_filter_block:learning_center_detail-page_1') }}
        {% endif %}
      </div>
    </div>
  </section>

  {% if page.highlighted %}
    <div class="layout-highlighted">
      {{ page.highlighted }}
    </div>
  {% endif %}

  <main class="layout-main" role="main">
    <a id="main-content" tabindex="-1"></a>
    
    {% if page.messages %}
      <div class="layout-messages">
        {{ page.messages }}
      </div>
    {% endif %}
    
    <div class="layout-content">
      {{ page.content }}
    </div>
  </main>
  {% if page.footer_first or page.footer_second or page.footer_third or page.footer_fourth %}
    <!-- Footer -->
    <footer class="footer" role="contentinfo">
      <div class="footer-container">
        <div class="footer-content">
          <!-- Logo Section (Hardcoded) -->
          <div class="footer-logo-section">
            <a href="{{ front_page|default(path('<front>')) }}" class="footer-logo">
              <img src="{{ logo_path|default(base_path ~ directory ~ '/images/Ai-Logo2proof.png') }}" class="logo-icon" alt="{{ site_name|default('Site Logo')|t }}">
            </a>
            <div class="social-icons">
              <a href="#" class="social-icon-footer" aria-label="{{ 'Twitter'|t }}">T</a>
              <a href="#" class="social-icon-footer" aria-label="{{ 'LinkedIn'|t }}">in</a>
              <a href="#" class="social-icon-footer" aria-label="{{ 'Facebook'|t }}">f</a>
            </div>
          </div>

          <!-- Newsletter Section (Hardcoded) -->
          <div class="newsletter-section">
            <h3 class="newsletter-title">{{ 'Sign up for our weekly newsletter'|t }}</h3>
            <form class="newsletter-form">
              <input type="email" class="newsletter-input" placeholder="{{ 'enter email here'|t }}" required>
              <button type="submit" class="newsletter-btn">{{ 'Subscribe'|t }}</button>
            </form>
          </div>

          <!-- Artifact Info Column -->
					<div class="footer-column">
						<h3 class="footer-column-title">{{ 'ARTIFACT INFO'|t }}</h3>
            {{ page.footer_first }}
          </div>

          <!-- Resources Column -->
          <div class="footer-column">
            <h3 class="footer-column-title">{{ 'RESOURCES'|t }}</h3>
            {{ page.footer_second }}
          </div>

          <!-- About Column -->
          <!-- About Column -->
					<div class="footer-column">
						<h3 class="footer-column-title">{{ 'ABOUT'|t }}</h3>
            {{ page.footer_third }}
          </div>
        </div>
      </div>
    </footer>
  {% endif %}
</div>
