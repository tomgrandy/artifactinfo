{#
/**
 * @file
 * Default theme implementation to display a featured section item paragraph.
 *
 * Available variables:
 * - paragraph: The paragraph entity with limited access to object properties
 *   and methods. Only method names starting with "get", "has", or "is" and
 *   a few common methods such as "id", "label", and "bundle" are available.
 * - content: A list of content items. Use {{ content }} to print them all,
 *   or print a subset such as {{ content.field_example }}.
 * - attributes: HTML attributes for the containing element.
 * - view_mode: View mode; for example, "teaser" or "full".
 *
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'feature-card',
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}

{# Generate data attribute directly in Twig #}
{% set data_attr = 'feature-' ~ paragraph.id() %}
{% if paragraph.field_featured_title.value %}
  {% set data_attr = paragraph.field_featured_title.value|lower|clean_class %}
{% endif %}

{% block paragraph %}
  <div{{ attributes.addClass(classes).setAttribute('data-feature', data_attr) }}>

    {% if content.field_featured_image %}
      <div class="feature-image">
        {{ content.field_featured_image }}
        <div class="feature-overlay"></div>
      </div>
    {% endif %}

    {% if content.field_featured_title %}
      <h3 class="feature-title">
        {{ content.field_featured_title }}
      </h3>
    {% endif %}

    {% if content.field_featured_short_desc %}
      <p class="feature-subtitle">
        {{ content.field_featured_short_desc }}
      </p>
    {% endif %}

  </div>
{% endblock paragraph %}
